<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/summaryTitle"
        android:text="GBP Exchange Rates"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Top 3 Currency Summary -->
    <LinearLayout
        android:id="@+id/topCurrenciesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- USD Card -->
        <LinearLayout
            android:id="@+id/usdCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:text="USD"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/usdRate"
                android:text="-"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- EUR Card -->
        <LinearLayout
            android:id="@+id/eurCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#E8F5E9"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:text="EUR"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/eurRate"
                android:text="-"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- JPY Card -->
        <LinearLayout
            android:id="@+id/jpyCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="8dp"
            android:gravity="center">

            <TextView
                android:text="JPY"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/jpyRate"
                android:text="-"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for Currencies Below!"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search by name, code or country..."
        android:iconifiedByDefault="false"
        android:layout_marginBottom="8dp" />

    <!-- Colour Legend -->
    <LinearLayout
        android:id="@+id/legendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#EEEEEE"
        android:padding="6dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFCDD2"
            android:text="Weak (&lt;1.0)"
            android:padding="4dp"
            android:textSize="12sp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF9C4"
            android:text="Moderate (&lt;5.0)"
            android:padding="4dp"
            android:textSize="12sp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#BBDEFB"
            android:text="Strong (&lt;50.0)"
            android:padding="4dp"
            android:textSize="12sp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#C8E6C9"
            android:padding="4dp"
            android:text="V - Strong (\u2265 50.0)"
            android:textSize="12sp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>
    <!--  Last Updated label -->
    <TextView
        android:id="@+id/lastUpdatedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Last updated: just now"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginBottom="8dp" />

    <!-- List of all currencies -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
