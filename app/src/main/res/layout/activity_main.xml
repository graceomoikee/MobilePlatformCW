<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".MainActivity">

    <ViewSwitcher
        android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!--  Screen 1: Currency List -->
        <LinearLayout
            android:id="@+id/screenList"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetch Currency Rates"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_blue_dark" />

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Search by name or code..."
                android:iconifiedByDefault="false"
                android:layout_marginBottom="8dp" />


            <!--  Top 3 Currencies Summary -->

            <LinearLayout
                android:id="@+id/topCurrenciesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <!-- Section Title -->
                <TextView
                    android:id="@+id/topCurrenciesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Currency Exchange Rates (from GBP)"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:background="#E0E0E0" />

                <!-- Three Equal Boxes -->
                <LinearLayout
                    android:id="@+id/topCurrenciesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_marginTop="4dp">

                    <!-- USD -->
                    <LinearLayout
                        android:id="@+id/usdCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#E3F2FD"
                        android:padding="8dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/usdLabel"
                            android:text="US Dollar (USD)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/usdRate"
                            android:text="-"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- EUR -->
                    <LinearLayout
                        android:id="@+id/eurCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#E8F5E9"
                        android:padding="8dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/eurLabel"
                            android:text="Euro (EUR)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/eurRate"
                            android:text="-"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- JPY -->
                    <LinearLayout
                        android:id="@+id/jpyCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#FFF3E0"
                        android:padding="8dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/jpyLabel"
                            android:text="Japanese Yen (JPY)"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/jpyRate"
                            android:text="-"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


        </LinearLayout>




            <!-- ðŸŽ¨ Colour Key Legend -->
            <LinearLayout
                android:id="@+id/legendLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp">

                <TextView
                    android:text="Colour Key: Currency Strength vs GBP"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="â€¢ Light Blue: Rate &lt; 1.0 (Weaker than GBP)"
                    android:textColor="#0288D1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="â€¢ Light Yellow: 1.0 â€“ 5.0 (Moderate)"
                    android:textColor="#FBC02D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="â€¢ Light Orange: 5.0 â€“ 10.0 (Strong)"
                    android:textColor="#F57C00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="â€¢ Light Red: &gt; 10.0 (Very Strong)"
                    android:textColor="#C62828"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp" />
        </LinearLayout>

        <!--  Screen 2: Conversion -->
        <LinearLayout
            android:id="@+id/screenConversion"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleText"
                android:text="Currency Conversion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/rateInfo"
                android:text="1 GBP = ?"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/gbpInput"
                android:hint="Enter amount in GBP"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/convertButton"
                android:text="Convert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/resultText"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reverseButton"
                android:text="Reverse Conversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/backButton"
                android:text="Back to List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </ViewSwitcher>

</LinearLayout>
