<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="12dp">

    <!-- Left column: title + top cards + search (same IDs preserved) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/summaryTitle"
            android:text="GBP Exchange Rates"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/topCurrenciesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:gravity="center">

        </LinearLayout>

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search by name, code or country..."
            android:iconifiedByDefault="false"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/usdCard"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#E3F2FD"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usdRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eurCard"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:background="#E8F5E9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eurRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jpyCard"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="6dp"
            android:background="#FFF3E0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JPY"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jpyRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

    <!-- Right column: List + last updated (same IDs preserved) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/lastUpdatedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated: just now"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"
            android:gravity="end"/>


            <!-- xml -->

                <LinearLayout
                    android:id="@+id/legendLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#EEEEEE"
                    android:padding="6dp"
                    android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C8E6C9"
                    android:padding="4dp"
                    android:text="V - Strong (\u2265 50.0)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="#BBDEFB"
                    android:padding="4dp"
                    android:text="Strong (&lt;50.0)"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="#FFCDD2"
                    android:padding="4dp"
                    android:text="Weak (&lt;1.0)"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="#FFF9C4"
                    android:padding="4dp"
                    android:text="Moderate (&lt;5.0)"
                    android:textSize="12sp" />
            </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" />
    </LinearLayout>
</LinearLayout>