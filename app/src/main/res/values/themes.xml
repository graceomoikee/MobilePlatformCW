<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Base.Theme.Omoike_grace_S2125456" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Core colours -->
        <item name="colorPrimary">#2196F3</item> <!-- Blue for strong currencies -->
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#4CAF50</item> <!-- Green for very strong -->
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="colorError">#F44336</item> <!-- Red for weak -->
        <item name="colorTertiary">#FFC107</item> <!-- Yellow for moderate -->

        <!-- Make our button style global -->
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="Theme.Omoike_grace_S2125456" parent="Base.Theme.Omoike_grace_S2125456" />

    <!-- Reusable button base -->
    <style name="AppButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
