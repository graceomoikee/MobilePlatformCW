<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base calculator button -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">#424242</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Orange operation buttons -->
    <style name="CalcButtonOrange" parent="CalcButton">
        <item name="android:background">#FFA726</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Wide zero button -->
    <style name="CalcButtonWide" parent="CalcButton">
        <item name="android:layout_columnSpan">2</item>
    </style>

</resources>
